set nocompatible
filetype on

set background=dark
colorscheme PaperColor

syntax on

set formatoptions=t

set tabstop=4
set softtabstop=4

set expandtab
set ttyfast

set showmode
set showcmd

set number
set cursorline

set encoding=utf-8
set wildmenu

set undofile
set showmatch
set hlsearch
set incsearch
set ignorecase
set smartcase

noremap yY y$
